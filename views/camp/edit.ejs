<div class="card">
    <span class="border border-info">
        <div class="card-body">
            <form action="/camp/edit/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <p>Post Name: </p>
                    <input type="text" value="<%=camp.name%>" name="all[name]">
                </div>
                <div class="form-group">
                    <p>Image URL: </p>
                    <input type="text" value="<%=camp.image%>" name="all[image]">
                </div>
                <div class="form-group form-check">
                    <p>Description: </p>
                    <textarea style="min-width: 100%" name="all[description]"><%=camp.description%></textarea>
                </div>

                <button type="submit" class="btn btn-success">SUBMIT</button>
            </form>
        </div>
