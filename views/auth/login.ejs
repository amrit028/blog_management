                    <p>Password: </p>
                    <input type="password" name=password placeholder="password">
                </div>
                <button type="submit" class="btn btn-success">SUBMIT</button>
            </form>
            <br/>
            <p id="menu-item-40" class="nav-item menu-item menu-item-type-post_type menu-item-object-page menu-item-40"><a href="/register" class="nav-link">GO TO REGISTER</a></p>
        </div>
    </span>    
